{
	"name": "@atomazing-org/telegram-web-app",
	"version": "0.0.1",
	"description": "Telegram Web App js wrapper",
	"type": "module",
	"files": [
		"dist"
	],
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.js",
		"default": "./dist/index.js"
	},
	"scripts": {
		"start": "node --experimental-strip-types src/index.ts",
		"build": "tsup",
		"format": "npm run format:prettier",
		"format:prettier": "npm run lint:prettier -- --write",
		"lint": "npm run lint:prettier && npm run lint:ts",
		"lint:prettier": "prettier \"**/*.{json,js,ts,tsx}\" --check --ignore-path ../../.prettierignore",
		"lint:ts": "tsc --noEmit",
		"clean": "rimraf dist node_modules",
		"debug:prettier": "prettier \"./src/index.ts\" --loglevel debug --ignore-path ../../.prettierignore",
		"debug:ts": "tsc --showConfig"
	},
	"dependencies": {
		"@types/telegram-web-app": "7.10.1"
	},
	"devDependencies": {
		"@atomazing-org/tsconfig": "latest",
		"tsup": "8.3.5",
		"typescript": "^5.8.3"
	},
	"packageManager": "npm@10.9.0",
	"engines": {
		"node": ">=22.11",
		"npm": ">=10"
	}
}
